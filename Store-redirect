<script>
function redirectToStore() {
  const userAgent = navigator.userAgent || navigator.vendor || window.opera;

  if (/android/i.test(userAgent)) {
    // Android device
    window.location.href = 'https://play.google.com/store/apps/details?id=com.blockchainvault';
  } else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
    // iOS device
    window.location.href = 'https://itunes.apple.com/us/app/pi-network/id1445472541';
  } else {
    // Not a mobile device - show instructions and QR code
    document.getElementById('redirecting').style.display = 'none';
    document.getElementById('desktop-instructions').style.display = 'block';
  }
}
</script>
</head>
<body onload="redirectToStore()">
  <div class="container">
    <div id="redirecting">
      <h1>Redirecting...</h1>
      <p>Please wait while we take you to the app store.</p>
    </div>

    <div id="desktop-instructions" style="display:none;">
      <h1>Open this page on your phone</h1>
      <p>Scan this QR code to download the app on your mobile device.</p>
